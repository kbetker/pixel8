extends layout

append head
	link(rel="stylesheet" href="/stylesheets/users-signup.css")
	//- script(src="/javascripts/signup.js" type="module" defer)
block content
	.spacer
	.container
		.form--container
			if locals.authenticated
				h1 You are already logged in!
			else
				form(action='/signup/new' method='post' id="userSignupForm")
					.form--element--container
						.form--container-left
							if errors
								div(class='alert alert-danger' role='alert')
									h2 The following error(s) occurred:
									ul
										each error in errors
											li= error
							else
								h1 New user
								div
							.form--element
								label(for="fullName")
									p Full Name
								input(type='text' name='fullName')

							.form--element
								label(for="username")
									p Username
								input(type='text' id="username" name='username')

							.form--element
								label(for="email")
									p Email Address
								input(type='text' name='email')
							.form--element
								label(for="Password")
									p Password
								input(type='password' name='password' id="password" required)

							.form--element
								label(for="confirmPassword")
									p confirmPassword
								input(type='password' name='confirmPassword' required)

						.form--container-right
							input(type='hidden' name='_csrf' value=csrfToken)
							.form--element
							.form--element
								label(for="about")
									p About
								textarea(name='about')

							.button--container
								button(type='submit' name='reg__button' value='create-user' class="login__button") Register!
								.demo-form
									button(type='button' name='reg__button' value='demo-login' class="demo__button") Demo User
